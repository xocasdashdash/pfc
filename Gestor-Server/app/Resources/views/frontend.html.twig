{# app/Resources/views/frontend.html.twig #}
{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets '@UAHGestorActividadesBundle/Resources/public/css/frontend/*.less'%}
    <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />          
    {% endstylesheets %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {% block navbar %}
        <div class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">      
                        <span class="sr-only">Ver navegaci√≥n</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="#">
                        {% image '@UAHGestorActividadesBundle/Resources/public/images/logo.gif' %}
                        <img height="59" src="{{asset_url}}" alt="Universidad de Alcala">

                        {% endimage %}

                    </a>                    
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="{{ path('uah_gestoractividades_default_index') }}">Inicio</a></li>
                        <li><a href="{{ path("uah_gestoractividades_login_login")}}" >Log in</a></li>
                            {% if app.user %}
                        <li><a href="{{ path("uah_gestoractividades_login_logout")}}" >Log out</a></li>
                        {% endif %}
                            {# fp_openid_security_check", {'openid_identifier': 'http://yo.rediris.es/','_target_path': "/"}) }}"#}

                        <li><a href="{{ path('uah_gestoractividades_perfil_index') }}">Perfil</a></li>
                            {% if user is defined and user.type == 'admin' %}
                            <li><a href="{{ path('uah_gestoractividades_admin_index') }}">Administrar</a></li>
                            {% endif %}
                        <li>
                            <form class="form-inline pull-right" role="form">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Buscar">
                                </div>
                                <button type="submit" class="btn btn-default">
                                    <span class="glyphicon glyphicon-search"></span>
                                </button>
                            </form>
                        </li>
                    </ul>                    
                </div><!--/.nav-collapse -->
            </div>
        </div>
    {% endblock %}

{% block content %}{% endblock %}
{% block modal %}{% endblock %}

{% endblock %}