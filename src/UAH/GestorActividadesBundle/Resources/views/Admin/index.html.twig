{% extends '::backend.html.twig' %}
{% block acciones_datos %}
    <div class="col-lg-9 col-xs-9">
        <div style="text-align:center">
            <h3>Datos del usuario</h3>
        </div>
        {# Falta dejar esto para que se cargue con las variables del usuario #}
        <div class="row">
            <div class="col-lg-3 col-xs-3 col-lg-offset-1 col-xs-offset-1"> 
                <a href="#" class="btn btn-default btn-primary btn-block">Actividades pendientes de aprobar</a>
            </div>
            <div class="col-lg-3 col-xs-3 col-lg-offset-1 col-xs-offset-1"> 
                <a href="#" class="btn btn-default btn-primary btn-block">Ver actividades aprobadas</a>                    
            </div>
            <div class="col-lg-3 col-xs-3 col-lg-offset-1 col-xs-offset-1"> 
                <a href="#" class="btn btn-default btn-primary btn-block">Estadisticas de Actividades</a>                    
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3 col-xs-3 col-lg-offset-1 col-xs-offset-1"> 
                <a href="#" class="btn btn-default btn-primary btn-block">Administrar secretarias</a>
            </div>
            <div class="col-lg-3 col-xs-3 col-lg-offset-1 col-xs-offset-1"> 
                <a href="#" class="btn btn-default btn-primary btn-block"> Administrar organizadores</a>                    
            </div>
            <div class="col-lg-3 col-xs-3 col-lg-offset-1 col-xs-offset-1"> 
                <a href="#" class="btn btn-default btn-primary btn-block">Estadisticas de Actividades</a>                    
            </div>
        </div>
    </div>
    
{% endblock %}

{% block contenido %}
    <table>
        <thead>
            <tr>
                {% set headers = ['#', 'Nombre', 'Fecha inscripción', 'Asistencia verificada', 'Creditos reconocidos', 'Solicitar verificación'] %}

                {% for header in headers %}
                    <th {% if loop.index == 2 %}class="nombre-actividad" {% endif %}>{{ header }}</th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
            {% for row in items %}
                <tr>
                    {% for column in row %}
                        {% if loop.first  %}<td>{{loop.index}}</td>{% endif %}
                        <td>{{ column }}</td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}