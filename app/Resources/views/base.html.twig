<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
            {% stylesheets
                '@UAHGestorActividadesBundle/Resources/public/vendor/normalize-css/normalize.css'
                'css/bootstrap.css' 
                '@UAHGestorActividadesBundle/Resources/public/css/base/*.less'
                filter='cssrewrite'%}
            <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />            
            {% endstylesheets %}

        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}
            {% block navbar %}
                <div class="navbar navbar-default navbar-fixed-top" role="navigation">
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">      
                                <span class="sr-only">Ver navegaci√≥n</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a href="#">
                                {% image '@UAHGestorActividadesBundle/Resources/public/images/logo.gif' %}
                                <img height="59" src="{{asset_url}}" alt="Universidad de Alcala">

                                {% endimage %}

                            </a>                    
                        </div>
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">
                                <li class="active"><a href="{{ path('uah_gestoractividades_default_index') }}">Inicio</a></li>

                                {% if app.user %}
                                    <li><a href="{{ path("uah_gestoractividades_login_logout")}}" >Log out</a></li>
                                    {% else %}
                                    <li><a href="{{ path("uah_gestoractividades_login_login")}}" >Log in</a></li>
                                    {% endif %}
                                    {# fp_openid_security_check", {'openid_identifier': 'http://yo.rediris.es/','_target_path': "/"}) }}"#}

                                <li><a href="{{ path('uah_gestoractividades_perfil_index') }}">Perfil</a></li>
                                    {% if user is defined and user.type == 'admin' %}
                                    <li><a href="{{ path('uah_gestoractividades_admin_index') }}">Administrar</a></li>
                                    {% endif %}
                                <li>
                                    <form class="form-inline pull-right" role="form">
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="Buscar">
                                        </div>
                                        <button type="submit" class="btn btn-default">
                                            <span class="glyphicon glyphicon-search"></span>
                                        </button>
                                    </form>
                                </li>
                            </ul>                    
                        </div><!--/.nav-collapse -->
                    </div>
                </div>
            {% endblock %}  

        {% endblock %}
        {% block javascripts %}
            {% javascripts 
            'js/jquery.js'
            'js/bootstrap.js' 
            '@UAHGestorActividadesBundle/Resources/public/vendor/holderjs/holder.js'%}
            <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>b